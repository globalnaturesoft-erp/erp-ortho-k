<% content_for :title do %>
    <%= t('.stock_importing') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-archive"></i> <%= t('.stock_importing') %>
<% end %>

<% content_for :global_filter do %>
    <div class="row">
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'category',
                value: '',
                text: '',
                label: t('.category'),
                placeholder: t('.choose_category'),
                url: erp_products.dataselect_backend_categories_path(format: 'json'),
                multiple: true
            }) %>
        </div>
        <div class="col-md-3">
            <% diameter = Erp::Products::Property.where(name: "Đường kính").first %>
            <%= erp_form_control("dataselect", {
                name: 'diameter',
                value: '',
                text: '',
                label: Erp::Products::Property.where(name: "Đường kính").first().name,
                placeholder: diameter.name,
                url: erp_products.dataselect_backend_properties_values_path(format: 'json', property_id: diameter.id),
                include_blank: t('.all_diameters'),
                multiple: true
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'warehouse',
                value: '',
                text: '',
                label: t('.warehouse'),
                placeholder: t('.all_warehouses'),
                url: erp_warehouses.dataselect_backend_warehouses_path(format: 'json'),
                multiple: true
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'area',
                value: '',
                text: '',
                label: t('.area'),
                placeholder: t('.all_areas'),
                url: erp_ortho_k.area_dataselect_backend_central_areas_path(format: 'json')
            }) %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <%= erp_form_control("text", {
                name: 'side_quantity',
                value: '1',
                text: '',
                label: t('.side_quantity'),
                placeholder: t('.side_quantity')
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("text", {
                name: 'central_quantity',
                value: '1',
                text: '',
                label: t('.central_quantity'),
                placeholder: t('.central_quantity')
            }) %>
        </div>
        <div class="col-md-6 text-right">
            <label style="display: block" class="invisible">.</label>
            <a class="btn btn-primary global_filter_action" href="<%= erp_orders.new_type_backend_orders_path(type: Erp::Orders::Order::TYPE_PURCHASE_ORDER) %>">
                <i class="fa fa-share-square"></i> <%= t('.create_purchase_order') %>
            </a>

            <%= erp_component('button/export', {
                text: '<i class="fa fa-download"></i> ' + t('.export_sheet')
            }) %>
        </div>
    </div>
<% end %>

<%= erp_datalist(
    url: erp_ortho_k.stock_importing_table_backend_products_path,
    sortable: true,
    keywords: [
        {
            text: t('.name'), name: 'erp_products_products.name'
        },
    ],
    filters: [
        {
            text: t('.show_virtual'), name: 'show_virtual', value: true, checked: false
        },
        {
            divider: true
        },
        {
            text: t('.state_normal'), name: 'state_normal', value: true, checked: true
        },
        {
            text: t('.state_scratched'), name: 'state_scratched', value: true, checked: false
        },
        {
            text: t('.state_broken'), name: 'state_broken', value: true, checked: false
        },
    ],
    columns: [
    ],
    header: 'dddddd'
) %>
