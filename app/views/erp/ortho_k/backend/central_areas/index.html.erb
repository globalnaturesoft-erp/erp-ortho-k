<% content_for :title do %>
    <%= t('.central_areas') %>
<% end %>

<% content_for :page_title do %>
    <i class="icon-target"></i> <%= t('.central_areas') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_ortho_k.new_backend_central_area_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_ortho_k.list_backend_central_areas_path,
    keywords: [
        {
            text: t('.name'), name: 'name'
        }
    ],
    actions: [
      
    ],
    filters: [
      
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.created_at'), name: 'created_at', value: true, checked: true
        }
    ],
    sort: { sort_by: 'erp_ortho_k_central_areas.name', sort_direction: 'asc' }
) %>