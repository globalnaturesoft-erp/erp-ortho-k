<% if (params.to_unsafe_hash[:global_filter][:from_date].present? && params.to_unsafe_hash[:global_filter][:to_date].present?) ||
      params.to_unsafe_hash[:global_filter][:period].present? %>
    
    <div class="custom-show text-center">
        <h4 class="font-blue-madison bold uppercase mb-15">
            Báo cáo công nợ khách hàng còn lại theo tháng <br>
            <span class="font-sm">
                (Từ tháng 1/2018 đến tháng 10/2018)
                <% if false %>
                    <% if @period_name.nil? %>
                        (<%= 'Từ ' + @from.strftime('%d/%m/%Y') if !@from.nil? %> <%= ' Đến ' + @to.strftime('%d/%m/%Y') if !@to.nil? %>)
                    <% else %>
                        (<%= 'Trong ' + @period_name %>)
                    <% end %>
                <% end %>
            </span>
        </h4>
    </div>
    
    <div class="text-right mb-10">
        <a target="_blank"
            href="<%= erp_ortho_k.report_customer_remaining_liabilities_by_monthly_xlsx_backend_accountings_path(params.to_unsafe_hash.merge({format: 'xlsx'})) %>"
            target="_blank"
            class="btn btn-primary"
        >Xuất excel</a>
    </div>
    
    <table class="table table-bordered order-column">
        <thead class="flip-content">
            <tr>
                <th width="5%"  class="text-center bg-green-jungle bg-font-green-jungle text-nowrap">STT</th>
                <th width="30%"  class="text-center bg-green-jungle bg-font-green-jungle text-nowrap">Tên khách hàng</th>
                <% (1..10).each do |month| %>
                    <th width="10%" class="text-center bg-green-jungle bg-font-green-jungle text-nowrap">T<%= month %>/2018</th>
                <% end %>
                <th width="20%" class="text-center bg-green-jungle bg-font-green-jungle text-nowrap">NV bán hàng</th>
            </tr>
        </thead>
        <tbody>
            <% (1..20).each_with_index do |customer, index| %>
                <tr>
                    <td class="text-center"><%= index+1 %></td>
                    <td class="text-left"><%= 'BV MẮT THÀNH PHỐ' %></td>
                    <% (1..10).each do |month| %>
                        <td class="text-right">
                            <%= format_number(rand(0..200000000)) %>
                        </td>
                    <% end %>
                    <td class="text-center">
                        <%= 'Nguyễn Văn A' %>
                    </td>
                </tr>
            <% end %>
            <tr>
                <td class="bg-green-jungle bg-font-green-jungle border-green-jungle text-center bold" colspan="2">TỔNG CỘNG</td>
                <% (1..10).each do |month| %>
                    <td class="bg-green-jungle bg-font-green-jungle border-green-jungle text-right bold"><%= format_number(rand(0..200000000)) %></td>
                <% end %>
                <td class="bg-green-jungle bg-font-green-jungle border-green-jungle text-center bold"></td>
            </tr>
        </tbody>
    </table>
<% else %>
    <div class="alert alert-warning"><%= t('.please_select_filter') %></div>
<% end %>