<% if (params.to_unsafe_hash[:global_filter][:from_date].present? && params.to_unsafe_hash[:global_filter][:to_date].present?) ||
      params.to_unsafe_hash[:global_filter][:period].present? %>
    
    <div class="custom-show text-center">
        <h4 class="font-blue-madison bold uppercase mb-15">
            Danh sách công nợ nhà cung cấp
            <% if @period_name.nil? %>
                <%= 'Từ ' + @from.strftime('%d/%m/%Y') if !@from.nil? %> <%= ' Đến ' + @to.strftime('%d/%m/%Y') if !@to.nil? %>
            <% else %>
                <%= 'Trong ' + @period_name %>
            <% end %>
        </h4>
    </div>
    
    <div class="text-right mb-10">
        <a target="_blank"
            href="<%= erp_ortho_k.report_supplier_liabilities_xlsx_backend_accountings_path(params.to_unsafe_hash.merge({format: 'xlsx'})) %>"
            target="_blank"
            class="btn btn-primary"
        >Xuất excel</a>
    </div>
    
    <table class="table table-bordered order-column">
        <thead class="flip-content">
            <tr>
                <th width="5%"  class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap">STT</th>
                <th width="20%" class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap">Tên nhà cung cấp</th>
                <th width="20%" class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap" title="Tổng số tiền còn nợ tính đến thời điểm ngày đầu kỳ">Tổng nợ đầu kỳ</th>
                <th width="20%" class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap" title="Khoản nợ phát sinh trong kỳ">Nợ trong kỳ</th>
                <th width="20%" class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap" title="Số tiền đã thanh toán trong kỳ">Đã thanh toán</th>
                <th width="20%" class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap" title="Số tiền còn nợ">Nợ cuối kỳ</th>
            </tr>
        </thead>
        <tbody>
            <% @suppliers.each_with_index do |supplier, index| %>
                <tr>
                    <td class="text-center"><%= index+1 %></td>
                    <td class="text-left"><%= supplier.name %></td>
                    <td class="text-center font-yellow-gold">
                        <%= format_number(supplier.purchase_debt_amount(to_date: (!@from.nil? ? (@from-1.day) : @from))) %>
                    </td>
                    <td class="text-center font-yellow-gold">
                        <%= format_number(supplier.purchase_total_amount(from_date: @from, to_date: @to)) %>
                    </td>
                    <td class="text-center font-yellow-gold">
                        <%= format_number(supplier.purchase_paid_amount(from_date: @from, to_date: @to)) %>
                    </td>
                    <td class="text-center font-yellow-gold">
                        <%= format_number(supplier.purchase_debt_amount(to_date: @to)) %>
                    </td>
                </tr>
            <% end %>
            <tr>
                <td class="bg-green-jungle bg-font-green-jungle border-green-jungle text-center bold" colspan="2">TỔNG CỘNG</td>
                <td class="bg-green-jungle bg-font-green-jungle border-green-jungle text-center bold"><%= format_number(@suppliers.purchase_debt_amount(to_date: (!@from.nil? ? (@from-1.day) : @from))) %></td>
                <td class="bg-green-jungle bg-font-green-jungle border-green-jungle text-center bold"><%= format_number(@suppliers.purchase_total_amount(from_date: @from, to_date: @to)) %></td>
                <td class="bg-green-jungle bg-font-green-jungle border-green-jungle text-center bold"><%= format_number(@suppliers.purchase_paid_amount(from_date: @from, to_date: @to)) %></td>
                <td class="bg-green-jungle bg-font-green-jungle border-green-jungle text-center bold"><%= format_number(@suppliers.purchase_debt_amount(to_date: @to)) %></td>
            </tr>
        </tbody>
    </table>
<% else %>
    <div class="alert alert-warning"><%= t('.please_select_filter') %></div>
<% end %>