<% if params.to_unsafe_hash[:global_filter][:from_date].present? ||
      params.to_unsafe_hash[:global_filter][:to_date].present? ||
      params.to_unsafe_hash[:global_filter][:period].present? %>
      
    <div class="custom-show text-center">
        <h4 class="font-blue-madison bold uppercase mb-15">
            Kết quả bán hàng - doanh số trong tuần
        </h4>
    </div>
    
    <table class="table table-bordered order-column">
        <thead class="flip-content">
            <tr>
                <th width="20%" class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap">Từ <%= format_date(Time.now-1.week) %> đến <%= format_date(Time.now) %></th>
                <th class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap">Tên vật tư</th>
                <th width="20%" class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap">Số lượng</th>
                <th width="20%" class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap">Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            <% @sales_order_details.each_with_index do |order_detail, index| %>
                <tr>
                    <% if index == 0 %>
                        <td class="text-center bold" rowspan="<%= @sales_order_details.count %>">XUẤT BÁN HÀNG</td>
                    <% end %>
                    <% if index+1 < @sales_order_details.count %>
                        <td class="text-left"><%= order_detail.product.category_name %></td>
                        <td class="text-right font-yellow-gold"><%= format_number(rand(1..200)) %></td>
                        <td class="text-right font-yellow-gold"><%= format_number(312*1000) %></td>
                    <% end %>
                    <% if index+1 == @sales_order_details.count %>
                        <td class="text-left bold">TỔNG BÁN</td>
                        <td class="text-right"><strong><%= format_number(rand(1..200)) %></strong></td>
                        <td class="text-right"><strong><%= format_number(12322*1000) %></strong></td>
                    <% end %>
                </tr>
            <% end %>
            <% @delivery_details.each_with_index do |delivery_detail, index| %>
                <tr>
                    <% if index == 0 %>
                        <td class="text-center bold" rowspan="<%= @delivery_details.count %>">HÀNG BỊ TRẢ LẠI</td>
                    <% end %>
                    <% if index+1 < @delivery_details.count %>
                        <td class="text-left"><%= delivery_detail.get_product.category_name %></td>
                        <td class="text-right font-yellow-gold"><%= format_number(rand(1..200)) %></td>
                        <td class="text-right font-yellow-gold"><%= format_number(1*60) %></td>
                    <% end %>
                    <% if index+1 == @delivery_details.count %>
                        <td class="text-left bold">TỔNG TRẢ</td>
                        <td class="text-right"><strong><%= format_number(rand(1..200)) %></strong></td>
                        <td class="text-right"><strong><%= format_number(12322*1000) %></strong></td>
                    <% end %>
                </tr>
            <% end %>
            <tr>
                <td class="bg-green-jungle bg-font-green-jungle text-center" colspan="2"><h4 class="bold" title="Tổng tiền doanh số bán hàng sau khi đã trừ cho chi phí hàng bị trả lại">TỔNG CỘNG</h4></td>
                <td class="bg-green-jungle bg-font-green-jungle text-right"><h4 class="bold"><%= format_number(12322*1000) %></h4></td>
                <td class="bg-green-jungle bg-font-green-jungle text-right"><h4 class="bold"><%= format_number(12322*1000) %></h4></td>
            </tr>
            
        </tbody>
    </table>
<% else %>
    <div class="alert alert-warning"><%= t('.please_select_filter') %></div>
<% end %>