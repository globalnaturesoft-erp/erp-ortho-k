<% content_for :title do %>
    <%= t('.report_customer_remaining_liabilities_by_monthly') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-archive"></i> <%= t('.report_customer_remaining_liabilities_by_monthly') %>
<% end %>

<% content_for :global_filter do %>
    <% dfilters = current_user.get_filters(request.path+"_table").present? ? current_user.get_filters(request.path+"_table") : {}  %>
    <div class="row">
        <div class="col-md-3">
            <%= erp_form_control('date', {
                label: t('.from_date'),
                name: 'from_date',
                value: (dfilters["from_date"].present? ? dfilters["from_date"].to_date : nil),
                placeholder: t('.select_from_date')
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control('date', {
                label: t('.to_date'),
                name: 'to_date',
                value: (dfilters["to_date"].present? ? dfilters["to_date"].to_date : nil),
                placeholder: t('.select_to_date')
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'period',
                value: (dfilters["period"].present? ? Erp::Periods::Period.find(dfilters["period"]).id : nil),
                text: (dfilters["period"].present? ? Erp::Periods::Period.find(dfilters["period"]).name : nil),
                label: t('.filter_period'),
                placeholder: t('.choose_period'),
                url: erp_periods.dataselect_backend_periods_path(format: 'json')
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'salesperson_id',
                label: 'Nhân viên kinh doanh',
                placeholder: 'Tìm theo n.viên k.doanh/phụ trách',
                url: erp.dataselect_backend_users_path(format: 'json'),
                multiple: true
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'contact_group_id',
                label: 'Nhóm liên hệ',
                placeholder: 'Tìm theo nhóm',
                url: erp_contacts.dataselect_backend_contact_groups_path(format: 'json'),
                multiple: true
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'customer',
                label: t('.filter_customer'),
                placeholder: t('.choose_customer'),
                url: erp_contacts.dataselect_backend_contacts_path(format: 'json', is_customer: true, contact_id: Erp::Contacts::Contact.get_main_contact),
                multiple: true
            }) %>
        </div>
        <div class="col-md-6 text-right mt-25">
            <a href="#" class="btn btn-primary global-filter-button">Kiểm kho</a>
        </div>
    </div>
<% end %>

<%= erp_datalist(
    url: erp_ortho_k.report_customer_remaining_liabilities_by_monthly_table_backend_accountings_path,
    autoload: false,
    placeholder: 'Vui lòng chọn thông tin cần lọc và nhấn Kiểm tra'
) %>