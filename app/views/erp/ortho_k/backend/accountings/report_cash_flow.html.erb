<% content_for :title do %>
    <%= t('.report_cash_flow') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-archive"></i> <%= t('.report_cash_flow') %>
<% end %>

<% content_for :global_filter do %>
    <% dfilters = current_user.get_filters(request.path+"_table").present? ? current_user.get_filters(request.path+"_table") : {}  %>
    <div class="row">
        <div class="col-md-2">
            <%= erp_form_control('date', {
                label: t('.from_date'),
                name: 'from_date',
                value: (dfilters["from_date"].present? ? dfilters["from_date"].to_date : nil),
                placeholder: t('.select_from_date')
            }) %>
        </div>
        <div class="col-md-2">
            <%= erp_form_control('date', {
                label: t('.to_date'),
                name: 'to_date',
                value: (dfilters["to_date"].present? ? dfilters["to_date"].to_date : nil),
                placeholder: t('.select_to_date')
            }) %>
        </div>
        <div class="col-md-2">
            <%= erp_form_control("dataselect", {
                name: 'period',
                value: (dfilters["period"].present? ? Erp::Periods::Period.find(dfilters["period"]).id : nil),
                text: (dfilters["period"].present? ? Erp::Periods::Period.find(dfilters["period"]).name : nil),
                label: t('.filter_period'),
                placeholder: t('.choose_period'),
                url: erp_periods.dataselect_backend_periods_path(format: 'json')
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'account',
                value: (dfilters["account"].present? ? Erp::Payments::Account.find(dfilters["account"]).id : nil),
                text: (dfilters["account"].present? ? Erp::Payments::Account.find(dfilters["account"]).name : nil),
                label: t('.filter_account'),
                placeholder: t('.choose_account'),
                url: erp_payments.dataselect_backend_accounts_path(format: 'json')
            }) %>
        </div>
        <div class="col-md-3 mt-25 text-right">
            <a class="btn green-jungle global-filter-button">Lọc báo cáo</a>
        </div>
    </div>
<% end %>

<%= erp_datalist(
    url: erp_ortho_k.report_cash_flow_table_backend_accountings_path,
    autoload: false,
    placeholder: 'Vui lòng chọn điều kiện cần xem và nhấn "Lọc báo cáo"'
) %>
