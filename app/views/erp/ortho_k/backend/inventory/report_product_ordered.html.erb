<% content_for :title do %>
    Đặt hàng (ma trận)
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-archive"></i> Đặt hàng (ma trận)
<% end %>

<% content_for :global_filter do %>
    <div class="row">
        <div class="col-md-3">
            <%= erp_form_control('date', {
                label: 'Từ ngày',
                name: 'from_date',
                value: @from_date,
                placeholder: 'Chọn ngày đầu kỳ'
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control('date', {
                label: 'Đến ngày',
                name: 'to_date',
                value: @to_date,
                placeholder: 'Chọn ngày cuối kỳ'
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control('dataselect', {
                label: 'Mốc thời gian',
                name: 'period',
                value: (@period.present? ? @period.id : ''),
                text: (@period.present? ? @period.name : ''),
                placeholder: 'Chọn khoảng thời gian',
                url: erp_periods.dataselect_backend_periods_path(format: 'json'),
            }) %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'categories',
                value: '',
                text: '',
                label: 'Loại hàng',
                placeholder: 'Tất cả loại',
                url: erp_products.dataselect_backend_categories_path(format: 'json'),
                multiple: true
            }) %>
        </div>
        <div class="col-md-3">
            <% diameter = Erp::Products::Property.where(name: "Đường kính").first %>
            <%= erp_form_control("dataselect", {
                name: 'diameters',
                value: '',
                text: '',
                label: 'Đường kính',
                placeholder: diameter.name,
                url: erp_products.dataselect_backend_properties_values_path(format: 'json', property_id: diameter.id),
                include_blank: 'Tất cả đường kính',
                multiple: true
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'warehouses',
                value: '',
                text: '',
                label: 'Kho',
                placeholder: 'Tất cả kho',
                url: erp_warehouses.dataselect_backend_warehouses_path(format: 'json'),
                multiple: true
            }) %>
        </div>
        <!--<div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'states',
                value: '',
                text: '',
                label: 'Trạng thái',
                placeholder: 'Tất cả trạng thái',
                url: erp_products.dataselect_backend_states_path(format: 'json'),
                multiple: true
            }) %>
        </div>-->
    </div>
<% end %>

<div class="datalist-matrix">
    <%= erp_datalist(
        url: erp_ortho_k.report_product_ordered_table_backend_inventory_index_path,
        sortable: true,
        keyword: true,
        keywords: [
            {
                text: t('.name'), name: 'erp_products_products.name'
            },
        ],
        columns: [
        ],
    ) %>
</div>
