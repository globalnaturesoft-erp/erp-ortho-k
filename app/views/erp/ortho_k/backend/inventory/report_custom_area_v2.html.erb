<% content_for :title do %>
    Thống kê theo vùng
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-archive"></i> Thống kê theo vùng
<% end %>

<% content_for :global_filter do %>
    <div class="row">
        <div class="col-md-2">
            <%= erp_form_control('date', {
                label: 'Từ ngày',
                name: 'from_date',
                value: @from_date,
                placeholder: 'Chọn ngày đầu kỳ'
            }) %>
        </div>
        <div class="col-md-2">
            <%= erp_form_control('date', {
                label: 'Đến ngày',
                name: 'to_date',
                value: @to_date,
                placeholder: 'Chọn ngày cuối kỳ'
            }) %>
        </div>
        <div class="col-md-2">
            <%= erp_form_control('dataselect', {
                label: 'Mốc thời gian',
                name: 'period',
                value: (@period.present? ? @period.id : ''),
                text: (@period.present? ? @period.name : ''),
                placeholder: 'Chọn khoảng thời gian',
                url: erp_periods.dataselect_backend_periods_path(format: 'json'),
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'warehouse_ids',
                value: '',
                text: '',
                label: 'Kho',
                placeholder: 'Chọn kho',
                url: erp_warehouses.dataselect_backend_warehouses_path(format: 'json'),
                multiple: true
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'state_ids',
                value: '',
                text: '',
                label: 'Tình trạng',
                placeholder: 'Tất cả tình trạng',
                url: erp_products.dataselect_backend_states_path(format: 'json'),
                multiple: true
            }) %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'categories',
                value: '',
                text: '',
                label: 'Loại hàng',
                placeholder: 'Chọn loại hàng',
                url: erp_products.dataselect_backend_categories_path(format: 'json'),
                multiple: true
            }) %>
        </div>
        <div class="col-md-3 addable-container">
            <div style="height: 25px"></div>
            <div class="addable-boxes" data-pattern=".patterns-lvl1">
            </div>
            <div class="text-right mb-10" style="border-top: solid 1px #aaa">
                <a class="btn btn-xs btn-primary mt-10 addable-but-add">Thêm Chữ</a>
            </div>
        </div>
        <div class="col-md-6 addable-container">
            <div style="height: 25px"></div>
            <div class="addable-boxes" data-pattern=".patterns-lvl2">
            </div>
            <div class="text-right mb-10" style="border-top: solid 1px #aaa">
                <a class="btn btn-xs btn-primary mt-10 addable-but-add">Thêm Số/ĐK</a>
            </div>
        </div>
    </div>
<% end %>

<div class="patterns-lvl1" style="display: none">
    <div class="addable-box">
        <div class="row">
            <div class="col-md-10">
                <% letter = Erp::Products::Property.where(name: "Chữ").first %>
                <%= erp_form_control("dataselect", {
                    name: 'letters[<<index1>>]',
                    value: '',
                    text: '',
                    label: '',
                    placeholder: letter.name,
                    url: erp_products.dataselect_backend_properties_values_path(format: 'json', property_id: letter.id),
                    include_blank: 'Tất cả chữ',
                    multiple: true
                }) %>
            </div>
            <div class="col-md-2">
                <a class="btn btn-xs btn-danger mb-10 addable-but-remove">Xóa</a>
            </div>
        </div>
    </div>
</div>

