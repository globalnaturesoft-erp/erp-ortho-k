<% content_for :title do %>
    Thống kê theo vùng
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-archive"></i> Thống kê theo vùng
<% end %>

<% content_for :global_filter do %>
    <% dfilters = current_user.get_filters(request.path+"_table").present? ? current_user.get_filters(request.path+"_table") : {}  %>
    <div class="row">
        <div class="col-md-2">
            <%= erp_form_control('date', {
                label: 'Từ ngày',
                name: 'from_date',
                value: (dfilters["from_date"].present? ? dfilters["from_date"].to_date : nil),
                placeholder: 'Chọn ngày đầu kỳ'
            }) %>
        </div>
        <div class="col-md-2">
            <%= erp_form_control('date', {
                label: 'Đến ngày',
                name: 'to_date',
                value: (dfilters["to_date"].present? ? dfilters["to_date"].to_date : nil),
                placeholder: 'Chọn ngày cuối kỳ'
            }) %>
        </div>
        <div class="col-md-2">
            <%= erp_form_control('dataselect', {
                label: 'Mốc thời gian',
                name: 'period',
                value: (dfilters["period"].present? ? Erp::Periods::Period.find(dfilters["period"]).id : nil),
                text: (dfilters["period"].present? ? Erp::Periods::Period.find(dfilters["period"]).name : nil),
                placeholder: 'Chọn khoảng thời gian',
                url: erp_periods.dataselect_backend_periods_path(format: 'json'),
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'warehouse_ids',
                values: (
                    dfilters["warehouse_ids"].present? ?
                    (Erp::Warehouses::Warehouse.where(id: dfilters["warehouse_ids"]).map{|i| {text: i.name, value: i.id}})
                    : nil
                ),
                label: 'Kho',
                placeholder: 'Chọn kho',
                url: erp_warehouses.dataselect_backend_warehouses_path(format: 'json'),
                multiple: true
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'state_ids',
                values: (
                    dfilters["state_ids"].present? ?
                    (Erp::Products::State.where(id: dfilters["state_ids"]).map{|i| {text: i.name, value: i.id}})
                    : nil
                ),
                label: 'Tình trạng',
                placeholder: 'Tất cả tình trạng',
                url: erp_products.dataselect_backend_states_path(format: 'json'),
                multiple: true
            }) %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'categories',
                values: (
                    dfilters['categories'].present? ?
                    (Erp::Products::Category.where(id: dfilters['categories']).map{|i| {text: i.name, value: i.id}})
                    : nil
                ),
                label: 'Loại hàng',
                placeholder: 'Chọn loại hàng',
                url: erp_products.dataselect_backend_categories_path(format: 'json'),
                multiple: true
            }) %>
        </div>
        <div class="col-md-3 addable-container">
            <div style="height: 25px"></div>
            <div class="addable-boxes" data-pattern=".patterns-lvl1">
                <% (0..20).each do |number| %>
                    <% if dfilters["letters[#{number}]"].present? %>
                        <div class="addable-box">
                            <div class="row">
                                <div class="col-md-10">
                                    <% letter = Erp::Products::Property.where(name: "Chữ").first %>
                                    <%= erp_form_control("dataselect", {
                                        name: 'letters['+number.to_s+']',
                                        values: (
                                            dfilters["letters[#{number}]"].present? ?
                                            (Erp::Products::PropertiesValue.where(id: dfilters["letters[#{number}]"]).map{|i| {text: i.value, value: i.id}})
                                            : nil
                                        ),
                                        label: '',
                                        placeholder: letter.name,
                                        url: erp_products.dataselect_backend_properties_values_path(format: 'json', property_id: letter.id),
                                        include_blank: 'Tất cả chữ',
                                        multiple: true
                                    }) %>
                                </div>
                                <div class="col-md-2">
                                    <a class="btn btn-xs btn-danger mb-10 addable-but-remove">Xóa</a>
                                </div>
                            </div>
                        </div>
                    <% end %>
                <% end %>
            </div>
            <div class="text-right mb-10" style="border-top: solid 1px #aaa">
                <a class="btn btn-xs btn-primary mt-10 addable-but-add">Thêm Chữ</a>
            </div>
        </div>
        <div class="col-md-6 addable-container">
            <div style="height: 25px"></div>
            <div class="addable-boxes" data-pattern=".patterns-lvl2">
                <% (0..20).each do |num| %>
                    <% if dfilters["numbers_diameters[#{num}][numbers]"].present? %>
                        <div class="addable-box">
                            <div class="row">
                                <div class="col-md-5">
                                    <% number = Erp::Products::Property.where(name: "Số").first %>
                                    <%= erp_form_control("dataselect", {
                                        name: 'numbers_diameters['+num.to_s+'][numbers]',
                                        values: (
                                            dfilters["numbers_diameters[#{num}][numbers]"].present? ?
                                            (Erp::Products::PropertiesValue.where(id: dfilters["numbers_diameters[#{num}][numbers]"]).map{|i| {text: i.value, value: i.id}})
                                            : nil
                                        ),
                                        label: '',
                                        placeholder: number.name,
                                        url: erp_products.dataselect_backend_properties_values_path(format: 'json', property_id: number.id),
                                        include_blank: 'Tất cả số',
                                        multiple: true
                                    }) %>
                                </div>
                                <div class="col-md-5">
                                    <% diameter = Erp::Products::Property.where(name: "Đường kính").first %>
                                    <%= erp_form_control("dataselect", {
                                        name: 'numbers_diameters['+num.to_s+'][diameters]',
                                        values: (
                                            dfilters["numbers_diameters[#{num}][diameters]"].present? ?
                                            (Erp::Products::PropertiesValue.where(id: dfilters["numbers_diameters[#{num}][diameters]"]).map{|i| {text: i.value, value: i.id}})
                                            : nil
                                        ),
                                        label: '',
                                        placeholder: 'Chọn đường kính',
                                        url: erp_products.dataselect_backend_properties_values_path(format: 'json', property_id: diameter.id),
                                        include_blank: 'Tất cả đường kính',
                                        multiple: true
                                    }) %>
                                </div>
                                <div class="col-md-2"><a class="btn btn-xs btn-danger mb-10 addable-but-remove">Xóa</a></div>
                            </div>
                        </div>
                    <% end %>
                <% end %>
            </div>
            <div class="text-right mb-10" style="border-top: solid 1px #aaa">
                <a class="btn btn-xs btn-primary mt-10 addable-but-add">Thêm Số/ĐK</a>
            </div>
        </div>
    </div>
<% end %>

