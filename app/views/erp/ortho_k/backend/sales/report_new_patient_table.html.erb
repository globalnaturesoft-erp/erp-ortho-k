<% if params.to_unsafe_hash[:global_filter][:from_date].present? ||
      params.to_unsafe_hash[:global_filter][:to_date].present? ||
      params.to_unsafe_hash[:global_filter][:period].present? %>
    
    <div class="custom-show text-center">
        <h4 class="font-blue-madison bold uppercase mb-15">
            Danh sách số lượng bệnh nhân mới của khách hàng và phòng khám <br>
            <span class="font-sm">
                <% if @period_name.nil? %>
                    (<%= 'Từ ' + @from.strftime('%d/%m/%Y') if !@from.nil? %> <%= ' Đến ' + @to.strftime('%d/%m/%Y') if !@to.nil? %>)
                <% else %>
                    (<%= @period_name %>)
                <% end %>
            </span>
        </h4>
    </div>
    
    <div class="text-right mb-10">
        <a target="_blank"
            href="<%= erp_ortho_k.report_new_patient_xlsx_backend_sales_path(params.to_unsafe_hash.merge({format: 'xlsx'})) %>"
            target="_blank"
            class="btn btn-primary"
        >Xuất excel</a>
    </div>
    
    <% patient_states = Erp::OrthoK::PatientState.get_active %>
    <% colspan_qty = patient_states.count %>
    
    <table class="table table-bordered order-column">
        <thead class="">
            <tr>
                <th width="15%" rowspan="2" class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap"></th>
                <th colspan="<%= colspan_qty %>" class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap">Số lượng BN</th>
                <th width="75%"rowspan="2"  class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap">Danh sách BN mới</th>
            </tr>
            <tr>
                <% patient_states.each do |ps| %>
                    <th class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap"><%= ps.name %></th>
                <% end %>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="text-center uppercase bold"><%= 'Khách hàng công ty' %></td>
                <% patient_states.each do |ps| %>
                    <td class="text-center bold">
                        <%= Erp::Contacts::Contact.get_patients_by_state(
                            payment_for: Erp::Orders::Order::PAYMENT_FOR_CONTACT,
                            patient_state_id: ps.id,
                            from: @from,
                            to: @to
                        ).count %>
                    </td>
                <% end %>
                <td class="text-justify font-yellow-gold">
                    <% @liability_new_patients.each_with_index do |patient,index| %>
                        <%= patient.name %><%= ' | ' if index+1 < @liability_new_patients.count %>
                    <% end %>
                </td>
            </tr>
            <tr>
                <td class="text-center uppercase bold"><%= 'Phòng khám Ortho-K' %></td>
                <% patient_states.each do |ps| %>
                    <td class="text-center bold">
                        <%= Erp::Contacts::Contact.get_patients_by_state(
                            payment_for: Erp::Orders::Order::PAYMENT_FOR_ORDER,
                            patient_state_id: ps.id,
                            from: @from,
                            to: @to
                        ).count %>
                    </td>
                <% end %>
                <td class="text-justify font-yellow-gold">
                    <% @retail_new_patients.each_with_index do |patient, index| %>
                        <%= patient.name %><%= ' | ' if index+1 < @retail_new_patients.count %>
                    <% end %>
                </td>
            </tr>
            <tr>
                <td class="bg-green-jungle bg-font-green-jungle text-center uppercase bold"><%= 'Tổng cộng' %></td>
                <% patient_states.each do |ps| %>
                    <td class="bg-green-jungle bg-font-green-jungle text-center bold">
                        <%= Erp::Contacts::Contact.get_patients_by_state(
                            patient_state_id: ps.id,
                            from: @from,
                            to: @to
                        ).count %>
                    </td>
                <% end %>
                
                <td class="bg-green-jungle bg-font-green-jungle text-center"></td>
            </tr>
        </tbody>
    </table>
<% else %>
    <div class="alert alert-warning"><%= t('.please_select_filter') %></div>
<% end %>