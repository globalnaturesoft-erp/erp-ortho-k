<% if params.to_unsafe_hash[:global_filter][:from_date].present? ||
      params.to_unsafe_hash[:global_filter][:to_date].present? ||
      params.to_unsafe_hash[:global_filter][:period].present? %>
    
    <div class="custom-show text-center">
        <h4 class="font-blue-madison bold uppercase mb-15">
            Danh sách số lượng bệnh nhân mới của khách hàng và phòng khám
        </h4>
    </div>
    
    <table class="table table-bordered order-column">
        <thead class="flip-content">
            <tr>
                <th width="25%"  class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap"></th>
                <th width="15%" class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap">Số lượng</th>
                <th width="60%" class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap">Ghi chú</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="text-center uppercase bold"><%= 'Khách hàng công ty' %></td>
                <td class="text-center bold"><%= @liability_new_patients.count %></td>
                <td class="text-justify font-yellow-gold">
                    <% @liability_new_patients.each do |patient| %>
                        <%= patient.name %><%= ' | ' if index+1 < @liability_new_patients.count %>
                    <% end %>
                </td>
            </tr>
            <tr>
                <td class="text-center uppercase bold"><%= 'Phòng khám Ortho-K' %></td>
                <td class="text-center bold"><%= @retail_new_patients.count %></td>
                <td class="text-justify font-yellow-gold">
                    <% @retail_new_patients.each_with_index do |patient, index| %>
                        <%= patient.name %><%= ' | ' if index+1 < @retail_new_patients.count %>
                    <% end %>
                </td>
            </tr>
            <tr>
                <td class="bg-green-jungle bg-font-green-jungle text-center uppercase bold"><%= 'Tổng cộng' %></td>
                <td class="bg-green-jungle bg-font-green-jungle text-center bold"><%= @total_new_patient %></td>
                <td class="bg-green-jungle bg-font-green-jungle text-center"></td>
            </tr>
        </tbody>
    </table>
<% else %>
    <div class="alert alert-warning"><%= t('.please_select_filter') %></div>
<% end %>