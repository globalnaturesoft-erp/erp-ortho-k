<% if params.to_unsafe_hash[:global_filter][:from_date].present? ||
      params.to_unsafe_hash[:global_filter][:to_date].present? ||
      params.to_unsafe_hash[:global_filter][:period].present? %>
    
    <div class="text-right mb-10">
        <a target="_blank"
            href="<%= erp_ortho_k.report_product_sold_xlsx_backend_sales_path(params.to_unsafe_hash.merge({format: 'xlsx'})) %>"
            target="_blank"
            class="btn btn-primary"
        >Xuất excel</a>
    </div>
    
    <div class="custom-show text-center">
        <h4 class="font-blue-madison bold uppercase mb-15">
            Báo cáo số lượng hàng bán <br>
            <span class="font-sm">
                <% if @period_name.nil? %>
                    (<%= 'Từ ' + @from.strftime('%d/%m/%Y') if !@from.nil? %> <%= ' Đến ' + @to.strftime('%d/%m/%Y') if !@to.nil? %>)
                <% else %>
                    (<%= @period_name %>)
                <% end %>
            </span>
        </h4>
    </div>
    
    <table class="table table-bordered order-column">
        <thead class="flip-content">
            <tr>
                <th width="5%"  class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap">STT</th>
                <th class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap">Diễn giải</th>
                <th class="text-center bg-yellow-mint bg-font-yellow-mint text-nowrap">Số lượng</th>
            </tr>
        </thead>
        <tbody>
            <% @categories.each_with_index do |category,index| %>
                <tr>
                    <td class="text-center text-center"><%= index+1 %></td>
                    <td class="text-left bold"><%= category.name %></td>
                    <td class="text-center font-yellow-gold bold"><%= format_number(category.get_sales_quantity(from_date: @from, to_date: @to)) %></td>
                </tr>
            <% end %>
            <tr>
                <td class="bg-green-jungle bg-font-green-jungle text-center uppercase bold" colspan="2"><%= 'Tổng cộng' %></td>
                <td class="bg-green-jungle bg-font-green-jungle text-center bold"><%= format_number(@categories.total_sales_quantity(from_date: @from, to_date: @to)) %></td>
            </tr>
        </tbody>
    </table>
<% else %>
    <div class="alert alert-warning"><%= t('.please_select_filter') %></div>
<% end %>