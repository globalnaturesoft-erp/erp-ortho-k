<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <%= stylesheet_link_tag wicked_pdf_asset_base64("pdf") %>
    <style>
        <%= yield(:style) %>
    </style>
  </head>
  <body onload='number_pages'>
    <div class="header">
        <div class="left">
            <div class="line-1">
                CÔNG TY TNHH ORTHO-K VIỆT NAM
            </div>
            <div class="line-2">
                535 An Dương Vương, P.8, Q.5, TP. Hồ Chí Minh
            </div>
        </div>
        <div class="right">
            <div class="default">
                <div class="line-1">
                    Thời điểm in: <%= Time.now.strftime('%d/%m/%Y, %I:%M %p') %>
                </div>
                <div class="line-1">
                    Mẫu số: <%= yield(:form_num) %>
                </div>
            </div>
            <div class="line-1">
              <%= yield(:format_info) %>
            </div>
            <div class="line-1 acc-info">
                <%= yield(:accounting_info) %>
            </div>
        </div>
    </div>
    <div class="title">
        <div class="center">
            <div class="line-1">
                <%= yield(:title_line_1) %>
            </div>
            <div class="line-2">
                <%= yield(:title_line_2) %>
            </div>
            <div class="line-3">
                <%= yield(:title_line_3) %>
            </div>
        </div>
    </div>
    <div id="content">
      <div class="main_info">
        <div class="col-1">
          <%= yield(:main_info_col_1) %>
        </div>
        <div class="col-2">
          <%= yield(:main_info_col_2) %>
        </div>
        <div class="col-3">
          <%= yield(:main_info_col_3) %>
        </div>
      </div>
      <%= yield %>
    </div>
    <div class="footer">
      <%= yield(:footer) %>
      <%= yield(:bottom) %>
    </div>
  </body>
</html>
