<li class="nav-item <%= "active open" if [
                                          "erp/sales/backend/sales",
                                          "erp/gift_givens/backend/givens",
                                          "erp/consignments/backend/consignments",
                                        ].include?(params[:controller]) ||
                                        (params[:controller] == "erp/prices/backend/customer_prices" && (params[:action] == "index" || params[:action] == "update_contact")) ||
                                        (params[:controller] == "erp/prices/backend/customer_prices" && (params[:action] == "general" || params[:action] == "general_update")) %>">
    <a href="javascript:;" class="nav-link nav-toggle">
        <i class="icon-pie-chart"></i>
        <span class="title"><%= t('.sales') %></span>
        <% if ["erp/sales/backend/sales"].include?(params[:controller]) %>
            <span class="selected"></span>
            <span class="arrow open"></span>
        <% else %>
            <span class="arrow"></span>
        <% end %>

        <span class="notification-badge-container notification-sales"></span>
    </a>
    <ul class="sub-menu">
        <% if can? :menu_sales_sales_orders, nil %>
            <li class="nav-item <%= "active" if ["erp/sales/backend/sales"].include?(params[:controller]) %>">
                <a href="<%= erp_sales.backend_sales_orders_path %>" class="nav-link ">
                    <span class="title"><%= t('.sales_orders') %></span>
                    <span class="notification-badge-container notification-sales_get_waiting_sales_orders"></span>
                </a>
            </li>
        <% end %>
        <% if Erp::Core.available?("gift_givens") and (can? :menu_sales_gift_givens, nil) %>
            <li class="nav-item <%= "active open" if ["erp/gift_givens/backend/givens"].include?(params[:controller]) %>">
                <a href="<%= erp_gift_givens.backend_givens_path %>" class="nav-link ">
                    <span class="title">
                        Quà tặng
                    </span>
                    <% if ["erp/gift_givens/backend/givens"].include?(params[:controller]) %>
                    <span class="selected"></span>
                    <% end %>
                </a>
            </li>
        <% end %>
        <% if Erp::Core.available?("consignments") and (can? :menu_sales_consignments, nil) %>
            <li class="nav-item <%= "active open" if ["erp/consignments/backend/consignments"].include?(params[:controller]) %>">
                <a href="<%= erp_consignments.backend_consignments_path %>" class="nav-link ">
                    <span class="title">
                        Ký gửi/Cho mượn
                    </span>
                    <span class="notification-badge-container notification-sales_get_not_delivered_consignments"></span>
                    <% if ["erp/consignments/backend/consignments"].include?(params[:controller]) %>
                    <span class="selected"></span>
                    <% end %>
                </a>
            </li>
        <% end %>
        <% if Erp::Core.available?("prices") and (can? :menu_sales_customer_prices, nil) %>
            <%= render "layouts/erp/backend/menu/prices/customer_prices" %>
        <% end %>
    </ul>
</li>
