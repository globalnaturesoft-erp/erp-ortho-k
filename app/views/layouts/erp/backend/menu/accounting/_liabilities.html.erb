        <% else %>
            <span class="arrow"></span>
        <% end %>
    </a>
    <ul class="sub-menu" <% if
        (params[:controller] == "erp/payments/backend/payment_records" && params[:action] == "sales_orders_tracking") ||
        (params[:controller] == "erp/payments/backend/payment_records" && params[:action] == "liabilities_tracking") ||
