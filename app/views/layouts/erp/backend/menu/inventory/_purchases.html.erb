<li class="nav-item <%= "active open" if ["erp/purchase/backend/purchases"].include?(params[:controller]) ||
                                          ["erp/ortho_k/backend/setting"].include?(params[:controller]) ||
                                          (params[:controller] == "erp/ortho_k/backend/products" && params[:action] == "stock_importing") ||
                                          (params[:controller] == "erp/ortho_k/backend/products" && params[:action] == "purchasing_export") ||
                                          (params[:controller] == "erp/prices/backend/supplier_prices" && (params[:action] == "index" || params[:action] == "update_contact")) ||
                                          (params[:controller] == "erp/prices/backend/supplier_prices" && (params[:action] == "general" || params[:action] == "general_update")) %>">
    <a href="javascript:;" class="nav-link nav-toggle">
        <i class="icon-basket"></i>
        <span class="title">Mua hàng</span>
        <% if ["erp/purchase/backend/purchases"].include?(params[:controller]) ||
                ["erp/ortho_k/backend/setting"].include?(params[:controller]) ||
                (params[:controller] == "erp/ortho_k/backend/products" && params[:action] == "stock_importing") %>
            <span class="selected"></span>
            <span class="arrow open"></span>
        <% else %>
            <span class="arrow"></span>
        <% end %>
    </a>
    <ul class="sub-menu">
        <% if can? :menu_purchase_purchase_orders, nil %>
            <li class="nav-item <%= "active" if ["erp/purchase/backend/purchases"].include?(params[:controller]) %>">
                <a href="<%= erp_purchase.backend_purchase_orders_path %>" class="nav-link ">
                    <span class="title">Đơn mua hàng</span>
                </a>
            </li>
        <% end %>
        <% if can? :menu_purchase_purchase_purchase_estimation_stock_importing, nil %>
            <li class="nav-item <%= "active" if params[:controller] == "erp/ortho_k/backend/products" && params[:action] == "stock_importing" %>">
                <a href="<%= erp_ortho_k.stock_importing_backend_products_path %>" class="nav-link ">
                    <span class="title">Dự toán mua hàng</span>
                </a>
            </li>
        <% end %>
        <% if can? :menu_purchase_purchase_purchase_estimation_purchasing_export, nil %>
            <li class="nav-item <%= "active" if params[:controller] == "erp/ortho_k/backend/products" && params[:action] == "purchasing_export" %>">
                <a href="<%= erp_ortho_k.purchasing_export_backend_products_path %>" class="nav-link ">
                    <span class="title">Xuất tồn kho</span>
                </a>
            </li>
        <% end %>
        <% if can? :menu_purchase_purchase_purchase_estimation_product_area_config, nil %>
            <li class="nav-item <%= "active" if ["erp/ortho_k/backend/setting"].include?(params[:controller]) %>">
                <%= link_to 'Cấu hình phân vùng', erp_ortho_k.backend_setting_path, class: "nav-link ", title: 'Quản lý phân vùng/vùng trung tâm' %>
            </li>
        <% end %>
        <% if can? :menu_purchase_supplier_prices, nil %>
            <% if can? :purchase_supplier_prices_update_general, nil %><!--@todo: bỏ dòng này nếu mở menu giá riêng-->
                <% if Erp::Core.available?("prices") %>
                    <%= render "layouts/erp/backend/menu/prices/supplier_prices" %>
                <% end %>
            <% end %>
        <% end %>
    </ul>
</li>
