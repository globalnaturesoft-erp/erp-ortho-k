<li class="nav-item <%= "active open" if
  ["erp/products/backend/state_checks"].include?(params[:controller]) ||
  ["erp/products/backend/stock_checks"].include?(params[:controller]) ||
  ["erp/products/backend/damage_records"].include?(params[:controller])
%>">
    <a href="javascript:;" class="nav-link nav-toggle">
        <i class="icon-layers"></i>
        <span class="title">Kiểm kho</span>
        <% if
          ["erp/products/backend/state_checks"].include?(params[:controller]) ||
          ["erp/products/backend/stock_checks"].include?(params[:controller]) ||
          ["erp/products/backend/damage_records"].include?(params[:controller])
        %>
            <span class="selected"></span>
            <span class="arrow open"></span>
        <% else %>
            <span class="arrow"></span>
        <% end %>
    </a>
    <ul class="sub-menu" <% if
        ["erp/products/backend/state_checks"].include?(params[:controller]) ||
        ["erp/products/backend/stock_checks"].include?(params[:controller]) ||
        ["erp/products/backend/damage_records"].include?(params[:controller])
    %>
                            style="display: block;"
                        <% else %>style="display: none;"<% end %>>
        <% if Erp::Core.available?("products") %>
            <li class="nav-item <%= "active open" if ["erp/products/backend/state_checks"].include?(params[:controller]) %>">
                <a href="<%= erp_products.backend_state_checks_path %>" class="nav-link ">
                    <span class="title">
                        Trạng thái
                    </span>
                    <% if ["erp/products/backend/state_checks"].include?(params[:controller]) %>
                    <span class="selected"></span>
                    <% end %>
                </a>
            </li>
            <li class="nav-item <%= "active open" if ["erp/products/backend/stock_checks"].include?(params[:controller]) %>">
                <a href="<%= erp_products.backend_stock_checks_path %>" class="nav-link ">
                    <span class="title">
                        Số lượng
                    </span>
                    <% if ["erp/products/backend/stock_checks"].include?(params[:controller]) %>
                    <span class="selected"></span>
                    <% end %>
                </a>
            </li>
        <% end %>
        <% if Erp::Core.available?("products") %>
            <li class="nav-item <%= "active open" if ["erp/products/backend/damage_records"].include?(params[:controller]) %>">
                <a href="<%= erp_products.backend_damage_records_path %>" class="nav-link ">
                    <span class="title">
                        Hủy hàng
                    </span>
                    <% if ["erp/products/backend/damage_records"].include?(params[:controller]) %>
                    <span class="selected"></span>
                    <% end %>
                </a>
            </li>
        <% end %>
    </ul>
</li>
